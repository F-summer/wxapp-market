.machine_wp{
  display: flex;
  width: 400px;
}
.machine_wp .machine_item_wp{
  width: 60px;
  height: 70px;
  position: relative;
  border: 1rpx solid #6190e8;
  border-radius: 2px;
  overflow: hidden;
  margin-right: 10px; 
}
.machine_wp .machine_item_wp:last-child{
  margin-right: 0; 
}
.machine_wp .machine_item_wp .machine_item_slide{
  position: absolute;
  width: 60px;
  height: 70px;
  top: 0;
  left: 0; 
}
.machine_wp .machine_item_wp .machine_item_ele{
  width: 60px;
  height: 70px;
  line-height: 70px;
  font-size: 24px;
  color: #6190e8;
  text-align: center; 
}
